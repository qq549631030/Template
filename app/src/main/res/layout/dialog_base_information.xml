<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_dialog_padding"
        android:orientation="vertical">

        <TextView
            android:id="@id/base_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dialog_padding"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/base_color_c2"
            android:textSize="@dimen/base_text_size_t1"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@id/base_dialog_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dialog_padding"
            android:indeterminate="true"
            android:visibility="gone" />

        <ProgressBar
            android:id="@id/base_dialog_loading_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/base_dialog_padding"
            android:indeterminate="true"
            android:visibility="gone" />

        <TextView
            android:id="@id/base_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/base_color_c3"
            android:textSize="@dimen/base_text_size_t2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dialog_button_height"
        android:layout_marginBottom="@dimen/base_dialog_padding"
        android:layout_marginLeft="@dimen/base_dialog_padding"
        android:layout_marginRight="@dimen/base_dialog_padding"
        android:divider="@drawable/dialog_btn_divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@id/base_dialog_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_negative_btn_bg"
            android:textColor="@color/dialog_btn_text_color"
            android:textSize="@dimen/base_text_size_t3" />

        <Button
            android:id="@id/base_dialog_btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_positive_btn_bg"
            android:textColor="@color/dialog_btn_text_color"
            android:textSize="@dimen/base_text_size_t3" />

    </LinearLayout>

</LinearLayout>