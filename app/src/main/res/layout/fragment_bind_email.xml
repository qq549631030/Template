<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/base_padding_size"
    tools:context="com.hx.template.ui.fragment.BindEmailFragment">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding_size"
        android:hint="@string/bind_email_email_input_hint"
        android:transitionName="bindEmail" />

    <Button
        android:id="@+id/bind"
        style="@style/BaseButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding_size"
        android:text="@string/bind" />
</LinearLayout>
