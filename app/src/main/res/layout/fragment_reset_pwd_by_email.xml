<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/base_padding_size"
    tools:context="com.hx.template.ui.fragment.ResetPwdByEmailFragment">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding_size"
        android:hint="请输入要绑定的邮箱" />

    <Button
        android:id="@+id/confirm"
        style="@style/BaseButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding_size"
        android:text="确定" />

    <TextView
        android:id="@+id/reset_by_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="使用绑定手机重置密码"
        android:textColor="@color/base_color_c1"
        android:textSize="14sp" />
</LinearLayout>
