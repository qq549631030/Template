<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--默认竖屏方向-->
        <item name="android:screenOrientation">portrait</item>
        <!--默认窗口背景-->
        <!--<item name="android:windowBackground">@drawable/window_background_transparent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_rect_solid_blue_corner_small</item>
        <item name="android:textColor">@color/app_base_white</item>
        <item name="android:minHeight">@dimen/base_normal_height</item>
        <item name="android:textSize">@dimen/base_text_size_t3</item>
    </style>

</resources>
